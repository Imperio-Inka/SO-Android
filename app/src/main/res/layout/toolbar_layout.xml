<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/theme_color"
	android:elevation="4dp"
	android:minHeight="@dimen/toolbar_hieght"
	app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/imgOpenDrawer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:src="@drawable/drawer_icon" />

		<TextView
			android:id="@+id/txtDetaisTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:textColor="@color/white"
			android:textSize="@dimen/text_size_20" />

		<TextView
			android:id="@+id/txtFragmentTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/img_profile"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:gravity="center"
			android:textColor="@color/white"
			android:textSize="@dimen/text_size_20" />

		<ImageView
			android:id="@+id/imgVwDone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@+id/txtFragmentTitle"
			android:padding="5dp"
			android:src="@drawable/checkmark"
			android:visibility="gone" />

		<ImageView
			android:id="@+id/imgVwEdit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:padding="10dp"
			android:src="@drawable/edit_event_icon"
			android:visibility="gone" />

	</RelativeLayout>


</android.support.v7.widget.Toolbar>
