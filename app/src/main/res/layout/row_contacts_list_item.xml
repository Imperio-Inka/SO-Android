<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@color/white">

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="7dp"
		android:background="@color/white"
		android:padding="5dp"
		app:cardCornerRadius="5dp">

		<RelativeLayout
			android:id="@+id/relative_layout1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<ImageView
				android:id="@+id/imgContactPic"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_centerVertical="true"
				android:layout_marginLeft="5dp"
				android:scaleType="centerInside"
				android:src="@drawable/img_profile_icon_man" />

			<RelativeLayout
				android:id="@+id/relative_layout2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:layout_toLeftOf="@+id/checkBox1"
				android:layout_toRightOf="@+id/imgContactPic"
				android:padding="5dp">

				<TextView
					android:id="@+id/txtContactName"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="3dp"
					android:textColor="@color/black"
					android:textSize="@dimen/text_size_20" />

				<TextView
					android:id="@+id/txtContactNumber"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/txtContactName"
					android:padding="3dp"
					android:text=""
					android:textColor="@color/black"
					android:textSize="@dimen/text_size_16" />

				<TextView
					android:id="@+id/txtContactEmail"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/txtContactNumber"
					android:padding="3dp"
					android:text=""
					android:textColor="@color/blue"
					android:textSize="@dimen/text_size_16" />

			</RelativeLayout>
			<CheckBox
				android:id="@+id/checkBox1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="5dp"
				android:padding="5dp"
				android:focusable="false"
				android:focusableInTouchMode="false"/>
		</RelativeLayout>

	</android.support.v7.widget.CardView>

</RelativeLayout>
