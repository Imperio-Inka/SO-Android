<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
	<!-- Application custom theme. -->
	<style name="MyTheme" parent="Base.MyTheme"></style>

	<style name="Base.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/theme_color</item>
		<item name="colorPrimaryDark">@color/theme_color</item>
		<item name="colorAccent">@color/theme_color</item>
		<item name="windowActionBar">false</item>
		<item name="windowActionBarOverlay">true</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowBackground">@color/white</item>
		<item name="alertDialogTheme">@style/AlertDialog.AppCompat.Light</item>
	</style>


	<style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar"></style>

	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>

	<style name="NoActionBarActivity" parent="@android:style/Theme.Material.Light" tools:targetApi="lollipop">
		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="Theme.Transparent" parent="android:Theme.Translucent.NoTitleBar"></style>

	<style name="SMRaisedButton" parent="@android:style/Theme.DeviceDefault">
		<item name="colorControlHighlight">@color/indigo</item>
		<item name="colorButtonNormal">@color/pink</item>
	</style>



	<!-- Custom progress hud -->
	<style name="ProgressHUD" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
		<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<!-- Custom Alert dialog-->
	<style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
		<!--buttons color-->
		<item name="colorAccent">@color/theme_color</item>
		<!--title and message color-->
		<item name="android:textColorPrimary">@color/theme_color</item>
		<!--dialog background-->
		<item name="android:windowBackground">@drawable/dialog_backgroud</item>
	</style>

	<style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
		<item name="colorAccent">@color/theme_color</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/white</item>
	</style>

	<style name="RatingBar"
		parent="android:style/Widget.Material.RatingBar.Small">
	</style>

</resources>
